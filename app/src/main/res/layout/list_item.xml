<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="@dimen/s90dp"
        android:layout_height="@dimen/s90dp"
        android:src="@drawable/new_york"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/s10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/list_item_image"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/list_item_name_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s0dp"
            android:layout_weight="1"
            android:text="Place Name"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:fontFamily="serif"
            android:gravity="bottom"/>

        <TextView
            android:id="@+id/list_item_address_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s0dp"
            android:layout_weight="1"
            android:text="Address"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:fontFamily="serif"
            android:gravity="top"/>
    </LinearLayout>
</RelativeLayout>